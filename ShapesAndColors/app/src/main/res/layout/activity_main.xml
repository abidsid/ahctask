<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Select a Color:"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/color_red"
            android:layout_width="66dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/img_color_red"
            android:layout_height="66dp"/>
        <ImageView
            android:id="@+id/color_green"
            android:layout_width="66dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/img_color_green"
            android:layout_height="66dp"/>
        <ImageView
            android:id="@+id/color_blue"
            android:layout_width="66dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/img_color_blue"
            android:layout_height="66dp"/>
        <ImageView
            android:id="@+id/color_yellow"
            android:layout_width="66dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/img_color_yellow"
            android:layout_height="66dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Select a Shape:"
        android:layout_margin="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shape_triangle"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:src="@drawable/img_triangle_gray"
            android:layout_height="50dip"/>
        <ImageView
            android:id="@+id/shape_circle"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:src="@drawable/img_circle_gray"
            android:layout_height="50dip"/>
        <ImageView
            android:id="@+id/shape_rectangle"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:src="@drawable/img_rectangle_gray"
            android:layout_height="50dip"/>
        <ImageView
            android:id="@+id/shape_star"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:src="@drawable/img_star_gray"
            android:layout_height="50dip"/>

    </LinearLayout>

    <TextView
        android:layout_margin="5dip"
        android:id="@+id/txtResult"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgResult"
        android:layout_gravity="center"
        android:layout_width="150dip"
        android:layout_height="150dip"/>

</LinearLayout>